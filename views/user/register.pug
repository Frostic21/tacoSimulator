extends ../layout

block content
    div.html1
        div.content
            h3 Register New User
            form(action='/register' method="post")
                div.input-form-row
                    div.input-container
                        label(for="email") Email
                        input(type="text" name="email" id="email")
                    div.input-container
                        label(for="password") Password
                        input(type="password" name="password" id="password")
                div.input-form-row
                    div.input-container
                        label(for="name") Name
                        input(type="text" name="name" id="name")
                    div.form-button-row
                        button.button.primary(type="submit") Register
                if error
                    p.error=error